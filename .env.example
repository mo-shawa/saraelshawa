# Sanity CMS Configuration
# Copy this file to .env and fill in your values

# Sanity Project ID (get from sanity.io/manage)
SANITY_PROJECT_ID=your-project-id

# Sanity Dataset (usually "production")
SANITY_DATASET=production

# Sanity API Token (optional for read, required for write operations)
# Generate at: https://www.sanity.io/manage/project/<project-id>/api#tokens
SANITY_API_TOKEN=

# For Sanity Studio (used in sanity folder)
SANITY_STUDIO_PROJECT_ID=your-project-id
SANITY_STUDIO_DATASET=production
